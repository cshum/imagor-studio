# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRATION=86400

# Storage Configuration
# Options: file, s3
STORAGE_TYPE=file

# File Storage Configuration (when STORAGE_TYPE=file)
FILE_BASE_DIR=./storage
FILE_MKDIR_PERMISSIONS=0755
FILE_WRITE_PERMISSIONS=0644

# S3 Storage Configuration (when STORAGE_TYPE=s3)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_BASE_DIR=images

# AWS Credentials (alternative to S3_ACCESS_KEY_ID/S3_SECRET_ACCESS_KEY)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Imagor Configuration
# Options: external, embedded, disabled
IMAGOR_MODE=external
IMAGOR_URL=http://localhost:8000
IMAGOR_UNSAFE=1
# IMAGOR_SECRET=your-imagor-secret-key
IMAGOR_RESULT_STORAGE=true

# Database Configuration
DB_PATH=./storage.db

# Server Configuration
PORT=8080
